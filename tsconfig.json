{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/**/*",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "packages/**/node_modules/*",
  ]
}